<UserControl x:Class="WPF_MVVM_SingletonSean.View.MakeReservationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MVVM_SingletonSean.View" 
             xmlns:viewmodel="clr-namespace:WPF_MVVM_SingletonSean.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:MakeReservationViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="white">
    <Grid Grid.IsSharedSizeScope="True" Margin="-6,0,6,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--Row 1-->
        <TextBlock Grid.Row="0"
            Text="Make Reservation" 
                       Style="{StaticResource Header}"/>
        <!--Row 2-->
        <Grid Grid.Row="1" Margin="0 25 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="User Name"
                       Grid.Row="0" />
            <TextBox Text="{Binding Username}"
                     Grid.Row="1"
                     Margin="0 5 0 0 " />
        </Grid>
        <!--Row 3-->

        <Grid Grid.Row="2" Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn" />
                <ColumnDefinition Width="auto" SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Floor NO" Grid.Row="0" Grid.Column="0" />
            <TextBox Text="{Binding FloorNumber}"
                     Grid.Row="1" Grid.Column="0" Margin="0,5,0,0" />

            <TextBlock Text="Room NO" Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" />
            <TextBox Text="{Binding RoomNumber}"
                     Grid.Row="1" Grid.Column="1" Margin="10,5,0,0" />
            

        </Grid>
        <!--Row 4-->
        <Grid Grid.Row="3" Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn" />
                <ColumnDefinition Width="auto" SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Start Date" Grid.Row="0" Grid.Column="0" />
            <DatePicker SelectedDate="{Binding StartDate}"
                        Grid.Row="1"
                        Grid.Column="0" Margin="0,5,0,0" />

            <TextBlock Text="End Date" Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" />
            <DatePicker SelectedDate="{Binding EndDate}"
                        Grid.Row="1"
                        Grid.Column="1" Margin="10,5,0,0" />

        </Grid>
        <!--Row 5-->
        <StackPanel Margin="0 25 0 0" Grid.Row="4" Orientation="Horizontal" >
            <Button
                Command="{Binding SubmitCommand}"
                Content="Submit"></Button>
            <Button
                Command="{Binding CancelCommand}"
                Margin="10 0 0 0"
                    Content="Cancel"></Button>
        </StackPanel>
    </Grid>
</UserControl>
