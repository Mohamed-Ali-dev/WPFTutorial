<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBox">
        <!--Setter is used to applay property to all 
        the target element with specific value -->
        <!--Now all the textBoxes in the window will 
        share the same properies-->
        <!--You can override the Style by adding the
        property in specific TexTBox-->
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Light"/>
    </Style>
</ResourceDictionary>