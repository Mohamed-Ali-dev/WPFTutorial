<Window x:Class="WPFStartTutorial.View.ModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFStartTutorial.View"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Title="ModelWindow" Height="150" Width="250">
    <Grid>
        <StackPanel>
            <TextBox x:Name="txtInput" Width="200" Height="40" Margin="5"
                     TextChanged="txtInput_TextChanged"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOk" Content="OK" Width="50" 
                        Height="40" Margin="2" Click="btnOk_Click" IsEnabled="False"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="100"
                        Height="40" Click="btnCancel_Click"/>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
